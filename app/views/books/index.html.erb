<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <!--新しい順や評価の高い順に書籍をソートするためのリンクを生成(応用課題8d)-->
      <!--created_at カラムを降順（DESC）でソートした書籍一覧が表示-->
      <%= link_to "新しい順", books_path(sort: 'created_at DESC') %>
      <!--rate カラムを降順（DESC）でソートした書籍一覧が表示-->
      | <%= link_to "評価の高い順", books_path(sort: 'rate DESC') %>

      <%= render 'index', books: @books%>
    </div>
  </div>
</div>